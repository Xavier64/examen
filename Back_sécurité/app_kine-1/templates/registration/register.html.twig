{% extends 'base.html.twig' %}
{% block head %}
{% block title %}Inscription{% endblock %}
{% block stylesheets %} <link href="{{'styles/register.css'}}" rel="stylesheet"> {% endblock %}
{% endblock %}
{% block body %}
{% for message in app.flashes("success") %}
<div style="color: blue">{{message}}</div>
{% endfor %}
{# Formulaire Inscription #}
     <div class="container">
     <a href="/"><img src ="img/logoconnect.png"></a>
     <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
        <div class="formcontainer">
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        </div>
        {# {{ form_row(registrationForm.agreeTerms) }} #}
        <div class ="btncontainer">
        <button class="btn btn-lg btn-primary btn-inscription" type="submit">S'INSCRIRE</button>
        </div>
     </div>
    {{ form_end(registrationForm) }}
{% endblock %}
